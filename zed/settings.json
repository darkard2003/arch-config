// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html",
        },
      },
    },
  },
  "ssh_connections": [
    {
      "host": "darkmac.local",
      "args": [],
      "projects": [
        {
          "paths": ["/Users/dark/code/golang"],
        },
        {
          "paths": ["/Users/dark/code/project/depression"],
        },
      ],
    },
  ],
  "disable_ai": false,
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:7b",
    },
    "model_parameters": [],
  },
  "language_models": {
    "ollama": {
      "api_url": "http://darkmac:11434",
    },
  },
  "vim_mode": true,
  "terminal": {
    "font_size": 12.0,
    "font_family": "JetBrainsMono Nerd Font",
  },
  "base_keymap": "VSCode",
  "relative_line_numbers": "enabled",
  "sticky_scroll": {
    "enabled": false,
  },
  "gutter": {
    "line_numbers": true,
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "buffer_font_fallbacks": ["Droid Sans Mono", "monospace", "monospace"],
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "show_edit_predictions": true,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
}
